[user]
	name = chshouyu
	email = chshouyu@126.com
[color]
	ui = true
[alias]
	st = status
	br = branch
	co = checkout
	ci = commit
	brv = branch -vv
	sh = stash
	olog = log --oneline
	flog = log --pretty=format:\"%C(yellow)%h%Creset %C(cyan)%an%Creset %C(blue)(%cr)%Creset %s %C(green)%d\" --graph --all
	clog = log --pretty=format:\"%C(yellow)%h%Creset %C(cyan)%an%Creset %C(blue)(%cr)%Creset %s %C(green)%d\"
[push]
	default = simple
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	prompt = No
[mergetool]
	trustExitCode = false
	prompt = No
